<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Date</th>
                <th>Category</th>
                <th>Amount</th>
                <th>Payment Method</th>
                <th>Reference</th>
                <th>Notes</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Transactions == null || !Transactions.Any())
            {
                <tr>
                    <td colspan="6" class="text-center">No transactions found.</td>
                </tr>
            }
            else
            {
                @foreach (var transaction in Transactions)
                {
                    <tr>
                        <td>@transaction.TransactionDate.ToString("dd/MM/yyyy")</td>
                        <td>@(transaction.Category?.Name ?? "Uncategorized")</td>
                        <td class="@(transaction.TransactionType == TransactionType.Income ? "text-success" : "text-danger")">
                            @transaction.Amount.ToString("C")
                        </td>
                        <td>@(transaction.PaymentMethod?.Name ?? "-")</td>
                        <td>@(transaction.Reference ?? "-")</td>
                        <td>@(transaction.Notes ?? "-")</td>
                        <td>
                            <div class="d-flex gap-2" @onclick:stopPropagation="true">
                                <button class="btn btn-sm btn-primary"
                                        @onclick="() => OnEditClicked.InvokeAsync(transaction)"
                                        title="Edit Transaction">
                                    <i class="bi bi-pencil"></i>
                                </button>
                                <button class="btn btn-sm btn-secondary"
                                        @onclick="() => OnAttachmentsClicked.InvokeAsync(transaction)"
                                        title="View Attachments">
                                    <i class="bi bi-paperclip"></i>
                                </button>
                                <button class="btn btn-sm btn-danger"
                                        @onclick="() => OnDeleteClicked.InvokeAsync(transaction)"
                                        title="Delete Transaction">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

@code {
    [Parameter]
    public List<PropertyTransaction>? Transactions { get; set; }

    [Parameter]
    public EventCallback<PropertyTransaction> OnEditClicked { get; set; }

    [Parameter]
    public EventCallback<PropertyTransaction> OnDeleteClicked { get; set; }

    [Parameter]
    public EventCallback<PropertyTransaction> OnAttachmentsClicked { get; set; }
}
