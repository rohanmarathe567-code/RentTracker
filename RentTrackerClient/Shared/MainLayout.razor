@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Authorization
@using System.Linq
@using System.Security.Claims
@inject NavigationManager Navigation
@inject IAuthenticationService AuthService

<div class="page">

    <div class="main">
        <div class="top-row px-4 d-flex justify-content-between align-items-center">
            <h3 class="mb-0">Rent Tracker</h3>
            <div>
                <AuthorizeView>
                    <Authorized>
                        <div class="d-flex align-items-center gap-3">
                            <span>Welcome, @(context.User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.GivenName)?.Value ?? "User")!</span>
                            <a href="javascript:void(0)" class="text-decoration-none" @onclick="HandleLogout">Logout</a>
                        </div>
                    </Authorized>
                    <NotAuthorized>
                        <a href="login" class="me-3">Login</a>
                        <a href="register">Register</a>
                    </NotAuthorized>
                </AuthorizeView>
            </div>
        </div>

        <div class="content px-4">
            @Body
        </div>

        <footer class="footer">
            <div class="container-fluid px-4">
                <div class="row align-items-center">
                    <div class="col">
                        <span class="text-muted">Â© 2025 Rent Tracker</span>
                    </div>
                    <div class="col-auto">
                        <ThemeSwitcher />
                    </div>
                </div>
            </div>
        </footer>
    </div>
</div>

@code {
    private async Task HandleLogout()
    {
        await AuthService.LogoutAsync();
        Navigation.NavigateTo("/login");
    }
}
