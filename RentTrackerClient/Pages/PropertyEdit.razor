@page "/properties/add"
@page "/properties/{Id:guid}"
@using RentTrackerClient.Models
@using RentTrackerClient.Services
@using Microsoft.AspNetCore.Components.Forms
@inject RentalPropertyService PropertyService
@inject AttachmentService AttachmentService
@inject NavigationManager NavigationManager
@inject ILogger<PropertyEdit> Logger

<PageTitle>Property Details - Rent Tracker</PageTitle>

<!-- Property Form Modal -->
<div class="modal fade show" style="display: block;" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@(Id == Guid.Empty ? "Add New Property" : "Edit Property")</h5>
                <button type="button" class="btn-close" @onclick="NavigateToList"></button>
            </div>
            @if (isLoading)
            {
                <div class="modal-body">
                    <div class="loading-container">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                </div>
            }
            else if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="modal-body">
                    <div class="alert alert-danger">@errorMessage</div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-sm btn-primary" @onclick="NavigateToList">
                        <i class="bi bi-arrow-left"></i>
                        <span class="ms-1">Back to Properties</span>
                    </button>
                </div>
            }
            else if (property != null)
            {
                <EditForm Model="@property" OnValidSubmit="HandleValidSubmit">
                    <div class="modal-body">
                        <DataAnnotationsValidator />
                        <ValidationSummary />

                        <div class="row mb-3">
                            <div class="col-12">
                                <label for="address" class="form-label">Address</label>
                                <InputText id="address" class="form-control" @bind-Value="property.Address" />
                                <ValidationMessage For="@(() => property.Address)" />
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label for="suburb" class="form-label">Suburb</label>
                                <InputText id="suburb" class="form-control" @bind-Value="property.Suburb" />
                            </div>
                            <div class="col-md-4">
                                <label for="state" class="form-label">State</label>
                                <InputText id="state" class="form-control" @bind-Value="property.State" />
                            </div>
                            <div class="col-md-4">
                                <label for="postCode" class="form-label">Post Code</label>
                                <InputText id="postCode" class="form-control" @bind-Value="property.PostCode" />
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-12">
                                <label for="description" class="form-label">Description</label>
                                <InputTextArea id="description" class="form-control" @bind-Value="property.Description" rows="3" />
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label for="weeklyRent" class="form-label">Weekly Rent Amount</label>
                                <InputNumber id="weeklyRent" class="form-control" @bind-Value="property.WeeklyRentAmount" />
                            </div>
                            <div class="col-md-4">
                                <label for="leaseStart" class="form-label">Lease Start Date</label>
                                <InputDate id="leaseStart" class="form-control" @bind-Value="property.LeaseStartDate" />
                            </div>
                            <div class="col-md-4">
                                <label for="leaseEnd" class="form-label">Lease End Date</label>
                                <InputDate id="leaseEnd" class="form-control" @bind-Value="property.LeaseEndDate" />
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="propertyManager" class="form-label">Property Manager</label>
                                <InputText id="propertyManager" class="form-control" @bind-Value="property.PropertyManager" />
                            </div>
                            <div class="col-md-6">
                                <label for="propertyManagerContact" class="form-label">Property Manager Contact</label>
                                <InputText id="propertyManagerContact" class="form-control" @bind-Value="property.PropertyManagerContact" />
                            </div>
                        </div>

                       @if (!Id.Equals(Guid.Empty))
                       {
                           <div class="row mb-3">
                               <div class="col-12">
                                   <h5>Attachments</h5>
                                   <FileUploader
                                       Class="mt-3"
                                       OnFilesSelected="HandleFilesSelected"
                                       OnUploadFiles="HandleFileUpload"
                                       IsUploading="@isUploading" />

                                   @if (attachments != null && attachments.Any())
                                   {
                                       <div class="mt-3">
                                           <h6>Property Documents</h6>
                                           <div class="list-group">
                                               @foreach (var attachment in attachments)
                                               {
                                                   <div class="list-group-item d-flex justify-content-between align-items-center">
                                                       <div>
                                                           <i class="bi bi-file-earmark me-2"></i>
                                                           <span>@attachment.FileName</span>
                                                           @if (!string.IsNullOrEmpty(attachment.Description))
                                                           {
                                                               <small class="text-muted ms-2">@attachment.Description</small>
                                                           }
                                                       </div>
                                                       <div>
                                                           <button class="btn btn-sm btn-outline-primary me-2" @onclick="() => DownloadFile(attachment)">
                                                               <i class="bi bi-download"></i>
                                                           </button>
                                                           <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteFile(attachment)">
                                                               <i class="bi bi-trash"></i>
                                                           </button>
                                                       </div>
                                                   </div>
                                               }
                                           </div>
                                       </div>
                                   }
                               </div>
                           </div>
                       }
                   </div>
                   <div class="modal-footer">
                        <button type="button" class="btn btn-sm btn-secondary" @onclick="NavigateToList">
                            <i class="bi bi-x-lg"></i>
                            <span class="ms-1">Cancel</span>
                        </button>
                        <button type="submit" class="btn btn-sm btn-primary">
                            <i class="bi bi-check-lg"></i>
                            <span class="ms-1">Save</span>
                        </button>
                    </div>
                </EditForm>
            }
        </div>
    </div>
</div>

<div class="modal-backdrop fade show"></div>

@code {
    [Parameter]
    public Guid Id { get; set; } = Guid.Empty;

    private RentalProperty? property;
    private bool isLoading = true;
    private string? errorMessage;
    private bool isUploading;
    private List<Attachment>? attachments;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            isLoading = true;
            
            if (Id != Guid.Empty)
            {
                property = await PropertyService.GetPropertyAsync(Id);
                
                if (property == null)
                {
                    errorMessage = $"Property with ID {Id} not found.";
                }
            }
            else
            {
                property = new RentalProperty();
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading property: {ex.Message}";
            Console.WriteLine(ex);
        }
        finally
        {
            isLoading = false;

            // Load attachments if editing an existing property
            if (Id != Guid.Empty)
            {
                await LoadAttachments();
            }
        }
    }

    private async Task LoadAttachments()
    {
        try
        {
            attachments = await AttachmentService.GetAttachmentsByPropertyAsync(Id);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading attachments");
            errorMessage = "Failed to load attachments";
        }
    }

    private async Task HandleFilesSelected(IEnumerable<IBrowserFile> files)
    {
        // Files are handled in the FileUploader component
    }

    private async Task HandleFileUpload(IEnumerable<IBrowserFile> files)
    {
        isUploading = true;
        
        try
        {
            foreach (var file in files)
            {
                await AttachmentService.UploadAttachmentAsync(Id, file);
            }
            
            // Refresh the attachments list
            await LoadAttachments();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error uploading files");
            errorMessage = "Failed to upload files";
        }
        finally
        {
            isUploading = false;
        }
    }

    private async Task DownloadFile(Attachment attachment)
    {
        try
        {
            var fileStream = await AttachmentService.DownloadAttachmentAsync(attachment.Id);
            // Handle file download (browser specific implementation needed)
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error downloading file");
            errorMessage = "Failed to download file";
        }
    }

    private async Task DeleteFile(Attachment attachment)
    {
        try
        {
            await AttachmentService.DeleteAttachmentAsync(attachment.Id);
            await LoadAttachments();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error deleting file");
            errorMessage = "Failed to delete file";
        }
    }
private async Task HandleValidSubmit()
{
    if (property == null)
        return;

    try
    {
        // Clear any previous error messages
        errorMessage = null;
        
        // Ensure required fields are set
        if (string.IsNullOrWhiteSpace(property.Address))
        {
            errorMessage = "Address is required";
            return;
        }
        
        // Ensure all DateTime properties are in UTC format
        // Convert LeaseStartDate to UTC if it has a value
        if (property.LeaseStartDate.HasValue)
        {
            property.LeaseStartDate = DateTime.SpecifyKind(property.LeaseStartDate.Value, DateTimeKind.Utc);
        }
        
        // Convert LeaseEndDate to UTC if it has a value
        if (property.LeaseEndDate.HasValue)
        {
            property.LeaseEndDate = DateTime.SpecifyKind(property.LeaseEndDate.Value, DateTimeKind.Utc);
        }
        
        if (Id != Guid.Empty)
        {
            // Always update the UpdatedAt timestamp
            property.UpdatedAt = DateTime.UtcNow;
            
            var updatedProperty = await PropertyService.UpdatePropertyAsync(Id, property);
            if (updatedProperty != null)
            {
                Console.WriteLine($"Property updated successfully: {updatedProperty.Id}");
                NavigateToList();
            }
            else
            {
                errorMessage = "Failed to update property. Please try again.";
            }
        }
        else
        {
            // Let the backend handle ID generation
            
            // Set default values for dates
            property.CreatedAt = DateTime.UtcNow;
            property.UpdatedAt = DateTime.UtcNow;
            
            var createdProperty = await PropertyService.CreatePropertyAsync(property);
            if (createdProperty != null)
            {
                Console.WriteLine($"Property created successfully: {createdProperty.Id}");
                NavigateToList();
            }
            else
            {
                errorMessage = "Failed to create property. Please try again.";
            }
        }
    }
    catch (Exception ex)
    {
        errorMessage = $"Error saving property: {ex.Message}";
        Console.WriteLine($"Exception details: {ex}");
    }
}

    private void NavigateToList()
    {
        NavigationManager.NavigateTo("/properties");
    }
}