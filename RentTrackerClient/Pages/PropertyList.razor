@page "/properties"
@using RentTrackerClient.Models
@using RentTrackerClient.Models.Pagination
@using RentTrackerClient.Services
@inject RentalPropertyService PropertyService
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime

<PageTitle>Properties - Rent Tracker</PageTitle>

<div class="property-list-container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3>
            Rental Properties
        </h3>
        <div>

            <button class="btn btn-sm btn-primary" @onclick="NavigateToAddProperty">
                <i class="bi bi-plus-lg"></i>
                <span class="ms-1">Add New Property</span>
            </button>
            <button class="btn btn-sm btn-secondary" @onclick="() => _ = ToggleView()">
                <i class="bi bi-@(isCardView ? "table" : "grid-3x3-gap")"></i>
            </button>
        </div>

    </div>

    <div class="mb-4">
        <div class="input-group">
            <input type="text" class="form-control" placeholder="Search by address, suburb or state..."
                   @bind-value="searchTerm"
                   @bind-value:event="oninput"
                   @bind-value:after="@(async () => await OnSearchInput())" />
        </div>
    </div>

    @if (isLoading)
    {
        <div class="loading-container">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger">@errorMessage</div>
    }
    else if (!propertiesResponse.Items.Any())
    {
        <div class="alert alert-info">No properties found.</div>
    }
    else
    {
        @if (!isCardView)
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-light">
                        <tr>
                            <th @onclick='@(() => SortTable("Address"))' style="cursor: pointer;">
                                Address
                                @if (parameters.SortField == "Address")
                                {
                                    <span>@(parameters.SortDescending ? "▼" : "▲")</span>
                                }
                            </th>
                            <th @onclick='@(() => SortTable("Suburb"))' style="cursor: pointer;">
                                Suburb
                                @if (parameters.SortField == "Suburb")
                                {
                                    <span>@(parameters.SortDescending ? "▼" : "▲")</span>
                                }
                            </th>
                            <th @onclick='@(() => SortTable("State"))' style="cursor: pointer;">
                                State
                                @if (parameters.SortField == "State")
                                {
                                    <span>@(parameters.SortDescending ? "▼" : "▲")</span>
                                }
                            </th>
                            <th @onclick='@(() => SortTable("WeeklyRentAmount"))' style="cursor: pointer;">
                                Weekly Rent
                                @if (parameters.SortField == "WeeklyRentAmount")
                                {
                                    <span>@(parameters.SortDescending ? "▼" : "▲")</span>
                                }
                            </th>
                            <th @onclick='@(() => SortTable("LeaseEndDate"))' style="cursor: pointer;">
                                Lease End
                                @if (parameters.SortField == "LeaseEndDate")
                                {
                                    <span>@(parameters.SortDescending ? "▼" : "▲")</span>
                                }
                            </th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var property in propertiesResponse.Items)
                        {
                            <tr style="cursor: pointer;" @onclick="() => NavigateToPayments(property.Id)">
                                <td>@property.Address</td>
                                <td>@property.Suburb</td>
                                <td>@property.State</td>
                                <td>@(property.WeeklyRentAmount.HasValue ? $"${property.WeeklyRentAmount.Value:N2}" : "-")</td>
                                <td>@(property.LeaseEndDate.HasValue ? property.LeaseEndDate.Value.ToShortDateString() : "-")</td>
                                <td>
                                    <div class="d-flex gap-2">
                                        <button class="btn btn-sm btn-primary" @onclick:stopPropagation="true"
                                                @onclick="() => NavigateToEditProperty(property.Id)" title="Edit Property">
                                            <i class="bi bi-pencil"></i>
                                        </button>
                                        <button class="btn btn-sm btn-secondary" @onclick:stopPropagation="true"
                                                @onclick="() => NavigateToPayments(property.Id)" title="View Payments">
                                            <i class="bi bi-cash-coin"></i>
                                        </button>
                                        <button class="btn btn-sm btn-danger" @onclick:stopPropagation="true"
                                                @onclick="() => ConfirmDelete(property)" title="Delete Property">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="row g-4">
                @foreach (var property in propertiesResponse.Items)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="card h-100" style="cursor: pointer;" @onclick="() => NavigateToPayments(property.Id)">
                            <div class="card-body">
                                <h5 class="card-title">@property.Address</h5>
                                <p class="card-text">
                                    <strong>Location:</strong> @property.Suburb, @property.State<br />
                                    <strong>Weekly Rent:</strong> @(property.WeeklyRentAmount.HasValue ? $"${property.WeeklyRentAmount.Value:N2}" : "-")<br />
                                    <strong>Lease End:</strong> @(property.LeaseEndDate.HasValue ? property.LeaseEndDate.Value.ToShortDateString() : "-")
                                </p>
                                <div class="d-flex gap-2" @onclick:stopPropagation="true">
                                    <button class="btn btn-sm btn-primary"
                                            @onclick="() => NavigateToEditProperty(property.Id)" title="Edit Property">
                                        <i class="bi bi-pencil"></i>
                                    </button>
                                    <button class="btn btn-sm btn-secondary"
                                            @onclick="() => NavigateToPayments(property.Id)" title="View Payments">
                                        <i class="bi bi-cash-coin"></i>
                                    </button>
                                    <button class="btn btn-sm btn-danger"
                                            @onclick="() => ConfirmDelete(property)" title="Delete Property">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }

        @if (propertiesResponse.TotalPages > 1)
        {
            <nav aria-label="Properties pagination">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(propertiesResponse.HasPreviousPage ? "" : "disabled")">
                        <button class="page-link" @onclick="() => OnPageChanged(propertiesResponse.PageNumber - 1)" 
                                disabled="@(!propertiesResponse.HasPreviousPage)">
                            Previous
                        </button>
                    </li>
                    
                    @for (int i = 1; i <= propertiesResponse.TotalPages; i++)
                    {
                        var pageNumber = i;
                        <li class="page-item @(pageNumber == propertiesResponse.PageNumber ? "active" : "")">
                            <button class="page-link" @onclick="() => OnPageChanged(pageNumber)">
                                @pageNumber
                            </button>
                        </li>
                    }
                    
                    <li class="page-item @(propertiesResponse.HasNextPage ? "" : "disabled")">
                        <button class="page-link" @onclick="() => OnPageChanged(propertiesResponse.PageNumber + 1)" 
                                disabled="@(!propertiesResponse.HasNextPage)">
                            Next
                        </button>
                    </li>
                </ul>
            </nav>
        }
    }
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade @(isDeleteModalVisible ? "show" : "")" tabindex="-1" role="dialog"
     style="display: @(isDeleteModalVisible ? "block" : "none")">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" @onclick="CancelDelete" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete the property at @(propertyToDelete?.Address), @(propertyToDelete?.Suburb)?</p>
                <p class="text-danger">This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-sm btn-secondary" @onclick="CancelDelete">
                    <i class="bi bi-x-lg"></i>
                    <span class="ms-1">Cancel</span>
                </button>
                <button type="button" class="btn btn-sm btn-danger" @onclick="DeleteProperty">
                    <i class="bi bi-trash"></i>
                    <span class="ms-1">Delete</span>
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Backdrop -->
@if (isDeleteModalVisible)
{
    <div class="modal-backdrop fade show"></div>
}
@code {
    private const string ViewModeKey = "propertyListViewMode";
    private bool isCardView = false;
    private PaginatedResponse<RentalProperty> propertiesResponse = new();
    private PaginationParameters parameters = new()
    {
        SortField = "Address",
        SortDescending = false
    };
    private bool isLoading = true;
    private string? errorMessage;
    private string? searchTerm;
    private bool isDeleteModalVisible = false;
    private RentalProperty? propertyToDelete;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var storedViewMode = await JSRuntime.InvokeAsync<string>("localStorage.getItem", ViewModeKey);
            isCardView = storedViewMode == "card";
        }
        catch (Exception ex)
        {
            // Default to table view if localStorage access fails
            Console.WriteLine($"Error accessing localStorage: {ex.Message}");
            isCardView = false;
        }

        await LoadPropertiesAsync();
    }

    private async Task LoadPropertiesAsync()
    {
        try
        {
            isLoading = true;
            StateHasChanged();
            
            parameters.SearchTerm = searchTerm;
            propertiesResponse = await PropertyService.GetPaginatedPropertiesAsync(parameters);
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading properties: {ex.Message}";
            Console.WriteLine(ex);
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task OnPageChanged(int pageNumber)
    {
        parameters.PageNumber = pageNumber;
        await LoadPropertiesAsync();
    }

    private void SortTable(string field)
    {
        if (parameters.SortField == field)
        {
            // If already sorting by this field, toggle direction
            parameters.SortDescending = !parameters.SortDescending;
        }
        else
        {
            // New sort field, set as ascending by default
            parameters.SortField = field;
            parameters.SortDescending = false;
        }
        
        parameters.PageNumber = 1; // Reset to first page when sort changes
        _ = LoadPropertiesAsync();
    }
private async Task OnSearchInput()
{
    parameters.PageNumber = 1; // Reset to first page when search changes
    parameters.SearchTerm = searchTerm;
    await LoadPropertiesAsync();
}


    private void NavigateToAddProperty()
    {
        NavigationManager.NavigateTo("/properties/add");
    }

    private void NavigateToEditProperty(Guid id)
    {
        NavigationManager.NavigateTo($"/properties/{id}");
    }

    private void NavigateToPayments(Guid id)
    {
        NavigationManager.NavigateTo($"/payments/{id}");
    }

    private void ConfirmDelete(RentalProperty property)
    {
        propertyToDelete = property;
        isDeleteModalVisible = true;
    }

    private void CancelDelete()
    {
        isDeleteModalVisible = false;
        propertyToDelete = null;
    }

    private async Task DeleteProperty()
    {
        if (propertyToDelete == null) return;

        try
        {
            isLoading = true;
            StateHasChanged();

            await PropertyService.DeletePropertyAsync(propertyToDelete.Id);
            
            // Close the modal
            isDeleteModalVisible = false;
            propertyToDelete = null;
            
            // Reload the properties list
            await LoadPropertiesAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error deleting property: {ex.Message}";
            Console.WriteLine(ex);
            isDeleteModalVisible = false;
            propertyToDelete = null;
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task ToggleView()
    {
        isCardView = !isCardView;
        try
        {
            // Small delay to avoid excessive writes
            await Task.Delay(100);
            await JSRuntime.InvokeVoidAsync("localStorage.setItem", ViewModeKey, isCardView ? "card" : "table");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error saving view preference: {ex.Message}");
            // Continue with the view toggle even if saving fails
        }
    }
}