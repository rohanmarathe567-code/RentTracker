@page "/properties"
@using RentTrackerClient.Models
@using RentTrackerClient.Models.Pagination
@using RentTrackerClient.Services
@using RentTrackerClient.Components
@inject RentalPropertyService PropertyService
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime

<PageTitle>Properties - Rent Tracker</PageTitle>

<div class="property-list-container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h5>Rental Properties</h5>
        <div>

            <button class="btn btn-sm btn-primary" @onclick="NavigateToAddProperty">
                <i class="bi bi-plus-lg"></i>
                <span class="ms-1">Add New Property</span>
            </button>
        </div>

    </div>

    <div class="mb-4">
        <div class="input-group">
            <input type="text" class="form-control" placeholder="Search by address, suburb or state..."
                   @bind-value="searchTerm"
                   @bind-value:event="oninput"
                   @bind-value:after="@(async () => await OnSearchInput())" />
        </div>
    </div>

    @if (isLoading)
    {
        <div class="loading-container">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger">@errorMessage</div>
    }
    else if (!propertiesResponse.Items.Any())
    {
        <div class="alert alert-info">No properties found.</div>
    }
    else
    {
            <div class="row g-4">
                @foreach (var property in propertiesResponse.Items)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="card h-100 border" style="cursor: pointer;" @onclick="() => NavigateToTransactions(property.Id)">
                            <div class="card-header">
                                <h5 class="card-title mb-0">@property.Address</h5>
                            </div>
                            <div class="card-body">
                                <div class="card-text mb-3">
                                    <div class="d-flex justify-content-between mb-2">
                                        <span><i class="bi bi-geo-alt me-2"></i>@property.Address</span>
                                    </div>
                                    <div class="d-flex justify-content-between mb-2">
                                        <span><i class="bi bi-cash me-2"></i>$@(property.RentAmount.ToString("N2"))/week</span>
                                    </div>
                                    <div class="d-flex justify-content-between mb-2">
                                        <span><i class="bi bi-person me-2"></i>@(property.PropertyManager.Name)</span>
                                    </div>
                                    <div class="d-flex justify-content-between mb-2">
                                        <span><i class="bi bi-telephone me-2"></i>@(property.PropertyManager.Contact)</span>
                                    </div>
                                    <div class="d-flex justify-content-between">
                                        <span><i class="bi bi-calendar-event me-2"></i>Lease ends: @(property.LeaseDates.EndDate.ToShortDateString())</span>
                                    </div>
                                </div>
                                <div class="d-flex gap-2 justify-content-end" @onclick:stopPropagation="true">
                                    <button class="btn btn-primary"
                                            @onclick="() => NavigateToEditProperty(property.Id)" title="Edit Property">
                                        <i class="bi bi-pencil"></i>
                                    </button>
                                    <button class="btn btn-secondary"
                                            @onclick="() => NavigateToTransactions(property.Id)" title="View Transactions">
                                        <i class="bi bi-wallet2"></i>
                                    </button>
                                    <button class="btn btn-secondary"
                                            @onclick="() => NavigateToFinancialSummary(property.Id)" title="Financial Summary">
                                        <i class="bi bi-graph-up"></i>
                                    </button>
                                    <button class="btn btn-secondary"
                                            @onclick="() => ShowAttachments(property.Id)" title="View Attachments">
                                        <i class="bi bi-paperclip"></i>
                                    </button>
                                    <button class="btn btn-danger"
                                            @onclick="() => ConfirmDelete(property)" title="Delete Property">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

        @if (propertiesResponse.TotalPages > 1)
        {
            <nav aria-label="Properties pagination">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(propertiesResponse.HasPreviousPage ? "" : "disabled")">
                        <button class="page-link" @onclick="() => OnPageChanged(propertiesResponse.PageNumber - 1)" 
                                disabled="@(!propertiesResponse.HasPreviousPage)">
                            Previous
                        </button>
                    </li>
                    
                    @for (int i = 1; i <= propertiesResponse.TotalPages; i++)
                    {
                        var pageNumber = i;
                        <li class="page-item @(pageNumber == propertiesResponse.PageNumber ? "active" : "")">
                            <button class="page-link" @onclick="() => OnPageChanged(pageNumber)">
                                @pageNumber
                            </button>
                        </li>
                    }
                    
                    <li class="page-item @(propertiesResponse.HasNextPage ? "" : "disabled")">
                        <button class="page-link" @onclick="() => OnPageChanged(propertiesResponse.PageNumber + 1)" 
                                disabled="@(!propertiesResponse.HasNextPage)">
                            Next
                        </button>
                    </li>
                </ul>
            </nav>
        }
    }
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade @(isDeleteModalVisible ? "show" : "")" tabindex="-1" role="dialog"
     style="display: @(isDeleteModalVisible ? "block" : "none")">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" @onclick="CancelDelete" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete the property at @(propertyToDelete?.Address))?</p>
                <p class="text-danger">This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-sm btn-secondary" @onclick="CancelDelete">
                    <i class="bi bi-x-lg"></i>
                    <span class="ms-1">Cancel</span>
                </button>
                <button type="button" class="btn btn-sm btn-danger" @onclick="DeleteProperty">
                    <i class="bi bi-trash"></i>
                    <span class="ms-1">Delete</span>
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Backdrop -->
@if (isDeleteModalVisible)
{
    <div class="modal-backdrop fade show"></div>
}

<!-- Attachments Modal -->
<AttachmentsModal
    IsVisible="@isAttachmentsModalVisible"
    PropertyId="@selectedPropertyId"
    OnClose="@HideAttachments" />
@code {
    private PaginatedResponse<RentalProperty> propertiesResponse = new();
    private PaginationParameters parameters = new()
    {
        SortField = "Address",
        SortDescending = false
    };
    private bool isLoading = true;
    private string? errorMessage;
    private string? searchTerm;
    private bool isDeleteModalVisible = false;
    private RentalProperty? propertyToDelete;
    private bool isAttachmentsModalVisible = false;
    private string selectedPropertyId = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadPropertiesAsync();
    }

    private async Task LoadPropertiesAsync()
    {
        try
        {
            isLoading = true;
            StateHasChanged();
            
            parameters.SearchTerm = searchTerm;
            propertiesResponse = await PropertyService.GetPaginatedPropertiesAsync(parameters);
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading properties: {ex.Message}";
            Console.WriteLine(ex);
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task OnPageChanged(int pageNumber)
    {
        parameters.PageNumber = pageNumber;
        await LoadPropertiesAsync();
    }

    private void SortTable(string field)
    {
        if (parameters.SortField == field)
        {
            // If already sorting by this field, toggle direction
            parameters.SortDescending = !parameters.SortDescending;
        }
        else
        {
            // New sort field, set as ascending by default
            parameters.SortField = field;
            parameters.SortDescending = false;
        }
        
        parameters.PageNumber = 1; // Reset to first page when sort changes
        _ = LoadPropertiesAsync();
    }
private async Task OnSearchInput()
{
    parameters.PageNumber = 1; // Reset to first page when search changes
    parameters.SearchTerm = searchTerm;
    await LoadPropertiesAsync();
}


    private void NavigateToAddProperty()
    {
        NavigationManager.NavigateTo("/properties/add");
    }

    private void NavigateToEditProperty(string id)
    {
        NavigationManager.NavigateTo($"/properties/{id}");
    }
    private void NavigateToTransactions(string id)
    {
        NavigationManager.NavigateTo($"/properties/{id}/transactions");
    }

    private void NavigateToFinancialSummary(string id)
    {
        NavigationManager.NavigateTo($"/properties/{id}/financial-summary");
    }

    private void ConfirmDelete(RentalProperty property)
    {
        propertyToDelete = property;
        isDeleteModalVisible = true;
    }

    private void CancelDelete()
    {
        isDeleteModalVisible = false;
        propertyToDelete = null;
    }

    private async Task DeleteProperty()
    {
        if (propertyToDelete == null) return;

        try
        {
            isLoading = true;
            StateHasChanged();

            await PropertyService.DeletePropertyAsync(propertyToDelete.Id);
            
            // Close the modal
            isDeleteModalVisible = false;
            propertyToDelete = null;
            
            // Reload the properties list
            await LoadPropertiesAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error deleting property: {ex.Message}";
            Console.WriteLine(ex);
            isDeleteModalVisible = false;
            propertyToDelete = null;
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }


    private void ShowAttachments(string propertyId)
    {
        selectedPropertyId = propertyId;
        isAttachmentsModalVisible = true;
    }

    private void HideAttachments()
    {
        isAttachmentsModalVisible = false;
        selectedPropertyId = string.Empty;
    }
}