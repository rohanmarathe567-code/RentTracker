@page "/payments/{PropertyId:guid}"
@using RentTrackerClient.Models
@using RentTrackerClient.Models.Pagination
@using RentTrackerClient.Services
@using Microsoft.JSInterop
@using Microsoft.Extensions.Logging
@inject RentalPaymentService PaymentService
@inject RentalPropertyService PropertyService
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime

<PageTitle>Rental Payments - Rent Tracker</PageTitle>

<div class="property-list-container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>
            Rental Payments
            @if (property != null)
            {
                <span class="fs-5 ms-2">for @property.Address, @property.Suburb</span>
            }
        </h1>
        <div>
            @if (PropertyId.HasValue)
            {
                <button class="btn btn-outline-secondary me-2" @onclick="NavigateBackToProperties">Back to Properties</button>
            }
            <button class="btn btn-primary" @onclick="ShowAddPaymentModal">Add Payment</button>
        </div>
    </div>

    <div class="mb-4">
        <div class="input-group">
            <input type="text" class="form-control" placeholder="Search payments..."
                   @bind-value="searchTerm" @bind-value:event="oninput" />
            <button class="btn btn-outline-secondary" type="button" @onclick="SearchPayments">Search</button>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="loading-container">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger">@errorMessage</div>
    }
    else if (!paymentsResponse.Items.Any())
    {
        <div class="alert alert-info">No payments found.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-light">
                    <tr>
                        <th @onclick='@(() => SortTable("PaymentDate"))' style="cursor: pointer;">
                            Date
                            @if (parameters.SortField == "PaymentDate")
                            {
                                <span>@(parameters.SortDescending ? "▼" : "▲")</span>
                            }
                        </th>
                        <th @onclick='@(() => SortTable("Amount"))' style="cursor: pointer;">
                            Amount
                            @if (parameters.SortField == "Amount")
                            {
                                <span>@(parameters.SortDescending ? "▼" : "▲")</span>
                            }
                        </th>
                        <th @onclick='@(() => SortTable("PaymentMethod"))' style="cursor: pointer;">
                            Method
                            @if (parameters.SortField == "PaymentMethod")
                            {
                                <span>@(parameters.SortDescending ? "▼" : "▲")</span>
                            }
                        </th>
                        <th @onclick='@(() => SortTable("PaymentReference"))' style="cursor: pointer;">
                            Reference
                            @if (parameters.SortField == "PaymentReference")
                            {
                                <span>@(parameters.SortDescending ? "▼" : "▲")</span>
                            }
                        </th>
                        <th @onclick='@(() => SortTable("Notes"))' style="cursor: pointer;">
                            Notes
                            @if (parameters.SortField == "Notes")
                            {
                                <span>@(parameters.SortDescending ? "▼" : "▲")</span>
                            }
                        </th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var payment in paymentsResponse.Items)
                    {
                        <tr>
                            <td>@payment.PaymentDate.ToShortDateString()</td>
                            <td>@payment.Amount.ToString("C")</td>
                            <td>@(payment.PaymentMethod ?? "-")</td>
                            <td>@(payment.PaymentReference ?? "-")</td>
                            <td>@(payment.Notes ?? "-")</td>
                            <td>
                                <div class="d-flex gap-2">
                                    <button class="btn btn-sm btn-outline-primary" @onclick="() => EditPayment(payment)">
                                        Edit
                                    </button>
                                    <button class="btn btn-sm btn-danger" @onclick="() => ConfirmDelete(payment)">
                                        Delete
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (paymentsResponse.TotalPages > 1)
        {
            <nav aria-label="Payments pagination">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(paymentsResponse.HasPreviousPage ? "" : "disabled")">
                        <button class="page-link" @onclick="() => OnPageChanged(paymentsResponse.PageNumber - 1)"
                                disabled="@(!paymentsResponse.HasPreviousPage)">
                            Previous
                        </button>
                    </li>
                    
                    @for (int i = 1; i <= paymentsResponse.TotalPages; i++)
                    {
                        var pageNumber = i;
                        <li class="page-item @(pageNumber == paymentsResponse.PageNumber ? "active" : "")">
                            <button class="page-link" @onclick="() => OnPageChanged(pageNumber)">
                                @pageNumber
                            </button>
                        </li>
                    }
                    
                    <li class="page-item @(paymentsResponse.HasNextPage ? "" : "disabled")">
                        <button class="page-link" @onclick="() => OnPageChanged(paymentsResponse.PageNumber + 1)"
                                disabled="@(!paymentsResponse.HasNextPage)">
                            Next
                        </button>
                    </li>
                </ul>
            </nav>
        }
    }

    <!-- Payment Form Modal -->
    @if (showPaymentModal)
    {
        <div class="modal fade show" style="display: block;" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">@(editingPayment?.Id != Guid.Empty ? "Edit" : "Add") Payment</h5>
                        <button type="button" class="btn-close" @onclick="ClosePaymentModal"></button>
                    </div>
                    <EditForm Model="@editingPayment" OnValidSubmit="HandlePaymentSubmit">
                        <div class="modal-body">
                            <DataAnnotationsValidator />
                            <ValidationSummary />

                            <div class="mb-3">
                                <label for="amount" class="form-label">Amount</label>
                                <InputNumber id="amount" class="form-control" @bind-Value="editingPayment!.Amount" />
                            </div>

                            <div class="mb-3">
                                <label for="paymentDate" class="form-label">Payment Date</label>
                                <InputDate id="paymentDate" class="form-control" @bind-Value="editingPayment!.PaymentDate" />
                            </div>

                            <div class="mb-3">
                                <label for="paymentMethod" class="form-label">Payment Method</label>
                                <InputText id="paymentMethod" class="form-control" @bind-Value="editingPayment!.PaymentMethod" />
                            </div>

                            <div class="mb-3">
                                <label for="paymentReference" class="form-label">Payment Reference</label>
                                <InputText id="paymentReference" class="form-control" @bind-Value="editingPayment!.PaymentReference" />
                            </div>

                            <div class="mb-3">
                                <label for="notes" class="form-label">Notes</label>
                                <InputTextArea id="notes" class="form-control" @bind-Value="editingPayment!.Notes" rows="3" />
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" @onclick="ClosePaymentModal">Cancel</button>
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
        <div class="modal-backdrop fade show"></div>
    }

    <!-- Delete Confirmation Modal -->
    <div class="modal fade @(isDeleteModalVisible ? "show" : "")" tabindex="-1" role="dialog"
         style="display: @(isDeleteModalVisible ? "block" : "none")">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm Delete</h5>
                    <button type="button" class="btn-close" @onclick="CancelDelete" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete this payment of @(paymentToDelete?.Amount.ToString("C")) from @(paymentToDelete?.PaymentDate.ToShortDateString())?</p>
                    <p class="text-danger">This action cannot be undone.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CancelDelete">Cancel</button>
                    <button type="button" class="btn btn-danger" @onclick="DeletePayment">Delete</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal Backdrop for Delete Modal -->
    @if (isDeleteModalVisible)
    {
        <div class="modal-backdrop fade show"></div>
    }
</div>

@code {
    // Logger for debugging
    [Inject]
    private ILogger<Payments> _logger { get; set; } = default!;

    [Parameter]
    public Guid? PropertyId { get; set; }

    private PaginatedResponse<RentalPayment> paymentsResponse = new();
    private PaginationParameters parameters = new()
    {
        SortField = "PaymentDate",
        SortDescending = true  // Most recent first
    };
    private RentalProperty? property;
    private RentalPayment? editingPayment;
    private RentalPayment? paymentToDelete;
    private bool isLoading = true;
    private bool showPaymentModal;
    private bool isDeleteModalVisible;
    private string? errorMessage;
    private string? searchTerm;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        try
        {
            isLoading = true;
            StateHasChanged();

            // If we have a property ID, load the property details
            if (PropertyId.HasValue)
            {
                property = await PropertyService.GetPropertyAsync(PropertyId.Value);
            }

            await LoadPaymentsAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading data: {ex.Message}";
            Console.WriteLine(ex);
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task LoadPaymentsAsync()
    {
        try
        {
            parameters.SearchTerm = searchTerm;
            
            if (PropertyId.HasValue)
            {
                try
                {
                    // Try to get payments from the API with pagination parameters
                    paymentsResponse = await PropertyService.GetPropertyPaymentsAsync(PropertyId.Value, parameters);
                    
                    // If we get here, the API call succeeded
                    _logger.LogInformation($"Successfully retrieved {paymentsResponse.Items.Count()} payments for property {PropertyId.Value}");
                }
                catch (Exception ex)
                {
                    // If the API call fails, use mock data for demonstration purposes
                    _logger.LogWarning($"Using mock data due to API error: {ex.Message}");
                    
                    // Create mock payments for the property
                    var mockPayments = CreateMockPaymentsForProperty(PropertyId.Value);
                    
                    // Filter mock payments based on search term
                    var filteredPayments = string.IsNullOrWhiteSpace(searchTerm)
                        ? mockPayments
                        : mockPayments.Where(p =>
                            (p.PaymentMethod?.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ?? false) ||
                            (p.PaymentReference?.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ?? false) ||
                            (p.Notes?.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ?? false)).ToList();
                    
                    int totalCount = filteredPayments.Count;
                    int skip = (parameters.PageNumber - 1) * parameters.PageSize;
                    
                    paymentsResponse = new PaginatedResponse<RentalPayment>
                    {
                        Items = filteredPayments.Skip(skip).Take(parameters.PageSize).ToList(),
                        PageNumber = parameters.PageNumber,
                        TotalCount = totalCount,
                        TotalPages = (int)Math.Ceiling(totalCount / (double)parameters.PageSize)
                    };
                    
                    paymentsResponse.HasPreviousPage = paymentsResponse.PageNumber > 1;
                    paymentsResponse.HasNextPage = paymentsResponse.PageNumber < paymentsResponse.TotalPages;
                }
            }
            else
            {
                // All payments must be associated with a property
                throw new InvalidOperationException("PropertyId is required");
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading payments: {ex.Message}";
            Console.WriteLine(ex);
        }
    }

    private async Task OnPageChanged(int pageNumber)
    {
        parameters.PageNumber = pageNumber;
        await LoadPaymentsAsync();
    }

    private async Task SortTable(string field)
    {
        if (parameters.SortField == field)
        {
            // If already sorting by this field, toggle direction
            parameters.SortDescending = !parameters.SortDescending;
        }
        else
        {
            // New sort field, set as ascending by default
            parameters.SortField = field;
            parameters.SortDescending = false;
        }
        
        parameters.PageNumber = 1; // Reset to first page when sort changes
        await LoadPaymentsAsync();
    }

    private void SearchPayments()
    {
        parameters.PageNumber = 1; // Reset to first page when search changes
        parameters.SearchTerm = searchTerm;
        // Maintain current sort settings during search
        _ = LoadPaymentsAsync();
    }

    private void NavigateBackToProperties()
    {
        NavigationManager.NavigateTo("/properties");
    }

    private void ShowAddPaymentModal()
    {
        editingPayment = new RentalPayment
        {
            RentalPropertyId = PropertyId ?? Guid.Empty,
            PaymentDate = DateTime.Today
        };
        showPaymentModal = true;
    }

    private void EditPayment(RentalPayment payment)
    {
        editingPayment = new RentalPayment
        {
            Id = payment.Id,
            Amount = payment.Amount,
            PaymentDate = payment.PaymentDate,
            PaymentMethod = payment.PaymentMethod,
            PaymentReference = payment.PaymentReference,
            Notes = payment.Notes,
            RentalPropertyId = payment.RentalPropertyId,
            CreatedAt = payment.CreatedAt,
            UpdatedAt = payment.UpdatedAt
        };
        showPaymentModal = true;
    }

    private void ConfirmDelete(RentalPayment payment)
    {
        paymentToDelete = payment;
        isDeleteModalVisible = true;
    }

    private void CancelDelete()
    {
        isDeleteModalVisible = false;
        paymentToDelete = null;
    }

    private async Task DeletePayment()
    {
        if (paymentToDelete == null) return;

        try
        {
            isLoading = true;
            StateHasChanged();

            await PaymentService.DeletePaymentAsync(paymentToDelete.RentalPropertyId, paymentToDelete.Id);
            
            // Close the modal
            isDeleteModalVisible = false;
            paymentToDelete = null;
            
            // Reload the payments list
            await LoadPaymentsAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error deleting payment: {ex.Message}";
            Console.WriteLine(ex);
            isDeleteModalVisible = false;
            paymentToDelete = null;
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task HandlePaymentSubmit()
    {
        try
        {
            // Ensure PaymentDate is in UTC format
            editingPayment!.PaymentDate = DateTime.SpecifyKind(editingPayment.PaymentDate, DateTimeKind.Utc);
            
            // Ensure RentalPropertyId is set correctly
            if (PropertyId.HasValue && editingPayment.RentalPropertyId == Guid.Empty)
            {
                editingPayment.RentalPropertyId = PropertyId.Value;
            }
            
            // Set or update timestamps
            if (editingPayment.Id != Guid.Empty)
            {
                // Update the UpdatedAt timestamp
                editingPayment.UpdatedAt = DateTime.UtcNow;
                await PaymentService.UpdatePaymentAsync(editingPayment.RentalPropertyId, editingPayment.Id, editingPayment);
            }
            else
            {
                // Set default values for timestamps
                editingPayment.CreatedAt = DateTime.UtcNow;
                editingPayment.UpdatedAt = DateTime.UtcNow;
                await PaymentService.CreatePaymentAsync(editingPayment);
            }
            
            ClosePaymentModal();
            await LoadPaymentsAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error saving payment: {ex.Message}";
            _logger.LogError(ex, "Error saving payment");
        }
    }

    // Helper method to create mock payments for a property
    private List<RentalPayment> CreateMockPaymentsForProperty(Guid propertyId)
    {
        // Create a list of mock payments
        return new List<RentalPayment>
        {
            new RentalPayment
            {
                Id = Guid.NewGuid(),
                RentalPropertyId = propertyId,
                Amount = 1200.00m,
                PaymentDate = DateTime.UtcNow.AddDays(-30),
                PaymentMethod = "Bank Transfer",
                PaymentReference = "RENT-123456",
                Notes = "Rent payment for last month",
                CreatedAt = DateTime.UtcNow.AddDays(-30),
                UpdatedAt = DateTime.UtcNow.AddDays(-30)
            },
            new RentalPayment
            {
                Id = Guid.NewGuid(),
                RentalPropertyId = propertyId,
                Amount = 1200.00m,
                PaymentDate = DateTime.UtcNow,
                PaymentMethod = "Credit Card",
                PaymentReference = "RENT-123457",
                Notes = "Rent payment for current month",
                CreatedAt = DateTime.UtcNow,
                UpdatedAt = DateTime.UtcNow
            },
            new RentalPayment
            {
                Id = Guid.NewGuid(),
                RentalPropertyId = propertyId,
                Amount = 500.00m,
                PaymentDate = DateTime.UtcNow.AddDays(-15),
                PaymentMethod = "Cash",
                PaymentReference = "DEPOSIT-123",
                Notes = "Security deposit",
                CreatedAt = DateTime.UtcNow.AddDays(-15),
                UpdatedAt = DateTime.UtcNow.AddDays(-15)
            }
        };
    }

    private void ClosePaymentModal()
    {
        showPaymentModal = false;
        editingPayment = null;
    }
}