@page "/payments/{PropertyId:guid}"
@using RentTrackerClient.Models
@using RentTrackerClient.Models.Pagination
@using RentTrackerClient.Services
@using Microsoft.JSInterop
@using RentTrackerClient.Components
@using Microsoft.Extensions.Logging
@inject RentalPaymentService PaymentService
@inject RentalPropertyService PropertyService
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime
@inject ILogger<PaymentList> Logger

<PageTitle>Rental Payments - Rent Tracker</PageTitle>

<div class="property-list-container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4>
            Rental Payments
            @if (property != null)
            {
                <span class="fs-6 ms-1">for @property.Address, @property.Suburb</span>
            }
        </h4>
        <div>
            <button class="btn btn-sm btn-outline-secondary me-2" @onclick="NavigateBackToProperties">
                <i class="bi bi-arrow-left"></i>
                <span class="ms-1">Back</span>
            </button>
            <button class="btn btn-sm btn-primary" @onclick="ShowAddPaymentModal">
                <i class="bi bi-plus-lg"></i>
                <span class="ms-1">Add Payment</span>
            </button>
        </div>
    </div>

    <!-- Payment Timeline Control -->
    <div class="card mb-4">
        <div class="card-header">
            Last 8 payments
        </div>
        <div class="card-body">
            @{
                var recentPayments = paymentsResponse.Items.OrderByDescending(p => p.PaymentDate).Take(8).ToList();
            }
            @if (recentPayments.Any())
            {
                <div class="d-flex overflow-auto gap-4 pb-2">
                    @foreach (var payment in recentPayments)
                    {
                        var daysAgo = (DateTime.UtcNow - payment.PaymentDate).Days;
                        var dotColor = daysAgo switch
                        {
                            <= 7 => "bg-success",
                            <= 14 => "bg-primary",
                            <= 30 => "bg-warning",
                            _ => "bg-secondary"
                        };

                        <div class="text-center" style="min-width: 120px; pointer-events: none">
                            <div class="rounded-circle mx-auto mb-2 @dotColor" style="width: 16px; height: 16px"></div>
                            <div class="mb-1">@payment.Amount.ToString("C")</div>
                            <div class="small mb-1">@payment.PaymentDate.ToShortDateString()</div>
                            <div class="small mb-1">@(daysAgo == 0 ? "Today" : daysAgo == 1 ? "Yesterday" : $"{daysAgo} days ago")</div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-muted">No payment history available</div>
            }
        </div>
    </div>

    <div class="mb-4">
        <div class="input-group">
            <input type="text" class="form-control" placeholder="Search payments..."
                   @oninput="@(async (ChangeEventArgs e) => { searchTerm = e.Value?.ToString(); await SearchPayments(); })" />
        </div>
    </div>

    @if (isLoading)
    {
        <div class="loading-container">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger">@errorMessage</div>
    }
    else if (!paymentsResponse.Items.Any())
    {
        <div class="alert alert-info">No payments found.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-light">
                    <tr>
                        <th @onclick='@(() => SortTable("PaymentDate"))' style="cursor: pointer;">
                            Date
                            @if (parameters.SortField == "PaymentDate")
                            {
                                <span>@(parameters.SortDescending ? "▼" : "▲")</span>
                            }
                        </th>
                        <th @onclick='@(() => SortTable("Amount"))' style="cursor: pointer;">
                            Amount
                            @if (parameters.SortField == "Amount")
                            {
                                <span>@(parameters.SortDescending ? "▼" : "▲")</span>
                            }
                        </th>
                        <th @onclick='@(() => SortTable("PaymentMethod"))' style="cursor: pointer;">
                            Method
                            @if (parameters.SortField == "PaymentMethod")
                            {
                                <span>@(parameters.SortDescending ? "▼" : "▲")</span>
                            }
                        </th>
                        <th @onclick='@(() => SortTable("PaymentReference"))' style="cursor: pointer;">
                            Reference
                            @if (parameters.SortField == "PaymentReference")
                            {
                                <span>@(parameters.SortDescending ? "▼" : "▲")</span>
                            }
                        </th>
                        <th @onclick='@(() => SortTable("Notes"))' style="cursor: pointer;">
                            Notes
                            @if (parameters.SortField == "Notes")
                            {
                                <span>@(parameters.SortDescending ? "▼" : "▲")</span>
                            }
                        </th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var payment in paymentsResponse.Items)
                    {
                        <tr>
                            <td>@payment.PaymentDate.ToShortDateString()</td>
                            <td>@payment.Amount.ToString("C")</td>
                            <td>@(payment.PaymentMethod ?? "-")</td>
                            <td>@(payment.PaymentReference ?? "-")</td>
                            <td>@(payment.Notes ?? "-")</td>
                            <td>
                                <div class="d-flex gap-2">
                                    <button class="btn btn-primary" @onclick="() => EditPayment(payment)" title="Edit Payment">
                                        <i class="bi bi-pencil"></i>
                                    </button>
                                    <button class="btn btn-secondary" @onclick="() => ShowAttachments(payment)" title="Manage Attachments">
                                        <i class="bi bi-paperclip"></i>
                                    </button>
                                    <button class="btn btn-danger" @onclick="() => ConfirmDelete(payment)" title="Delete Payment">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (paymentsResponse.TotalPages > 1)
        {
            <nav aria-label="Payments pagination">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(paymentsResponse.HasPreviousPage ? "" : "disabled")">
                        <button class="page-link" @onclick="() => OnPageChanged(paymentsResponse.PageNumber - 1)"
                                disabled="@(!paymentsResponse.HasPreviousPage)">
                            Previous
                        </button>
                    </li>
                    
                    @for (int i = 1; i <= paymentsResponse.TotalPages; i++)
                    {
                        var pageNumber = i;
                        <li class="page-item @(pageNumber == paymentsResponse.PageNumber ? "active" : "")">
                            <button class="page-link" @onclick="() => OnPageChanged(pageNumber)">
                                @pageNumber
                            </button>
                        </li>
                    }
                    
                    <li class="page-item @(paymentsResponse.HasNextPage ? "" : "disabled")">
                        <button class="page-link" @onclick="() => OnPageChanged(paymentsResponse.PageNumber + 1)"
                                disabled="@(!paymentsResponse.HasNextPage)">
                            Next
                        </button>
                    </li>
                </ul>
            </nav>
        }
    }

    <!-- Delete Confirmation Modal -->
    <div class="modal fade @(isDeleteModalVisible ? "show" : "")" tabindex="-1" role="dialog"
         style="display: @(isDeleteModalVisible ? "block" : "none")">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm Delete</h5>
                    <button type="button" class="btn-close" @onclick="CancelDelete" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete this payment of @(paymentToDelete?.Amount.ToString("C")) from @(paymentToDelete?.PaymentDate.ToShortDateString())?</p>
                    <p class="text-danger">This action cannot be undone.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-sm btn-secondary" @onclick="CancelDelete">
                        <i class="bi bi-x-lg"></i>
                        <span class="ms-1">Cancel</span>
                    </button>
                    <button type="button" class="btn btn-sm btn-danger" @onclick="DeletePayment">
                        <i class="bi bi-trash"></i>
                        <span class="ms-1">Delete</span>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal Backdrop -->
    @if (isDeleteModalVisible || showPaymentModal)
    {
        <div class="modal-backdrop fade show"></div>
    }
</div>

<!-- Payment Edit Modal -->
<PaymentEdit 
    IsVisible="@showPaymentModal"
    Payment="@editingPayment"
    OnClose="@(() => ClosePaymentModal())"
    OnSave="@(async (payment) => await HandlePaymentSaved(payment))" />

<AttachmentsModal
    IsVisible="@showAttachmentsModal"
    PropertyId="@PropertyId"
    PaymentId="@selectedPaymentId"
    OnClose="@(() => CloseAttachmentsModal())" />

@code
{
    [Parameter]
    public required Guid PropertyId { get; set; }

    private PaginatedResponse<RentalPayment> paymentsResponse = new()
    {
        Items = new List<RentalPayment>()
    };
    private PaginationParameters parameters = new()
    {
        SortField = "PaymentDate",
        SortDescending = true  // Most recent first
    };
    private RentalProperty? property;
    private RentalPayment? editingPayment;
    private RentalPayment? paymentToDelete;
    private bool isLoading = true;
    private bool showPaymentModal;
    private bool isDeleteModalVisible;
    private bool showAttachmentsModal;
    private Guid? selectedPaymentId;
    private string? errorMessage;
    private string? searchTerm;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        try
        {
            isLoading = true;
            StateHasChanged();

            property = await PropertyService.GetPropertyAsync(PropertyId);
            await LoadPaymentsAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading data: {ex.Message}";
            Logger.LogError(ex, "Error loading data");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task LoadPaymentsAsync()
    {
        try
        {
            parameters.SearchTerm = searchTerm;
            paymentsResponse = await PropertyService.GetPropertyPaymentsAsync(PropertyId, parameters);
            Logger.LogInformation($"Successfully retrieved {paymentsResponse.Items.Count()} payments for property {PropertyId}");
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading payments: {ex.Message}";
            Logger.LogError(ex, "Error loading payments");
        }
    }

    private async Task OnPageChanged(int pageNumber)
    {
        parameters.PageNumber = pageNumber;
        await LoadPaymentsAsync();
    }

    private async Task SortTable(string field)
    {
        if (parameters.SortField == field)
        {
            parameters.SortDescending = !parameters.SortDescending;
        }
        else
        {
            parameters.SortField = field;
            parameters.SortDescending = false;
        }
        
        parameters.PageNumber = 1;
        await LoadPaymentsAsync();
    }

    private async Task SearchPayments()
    {
        parameters.PageNumber = 1;
        parameters.SearchTerm = searchTerm;
        await LoadPaymentsAsync();
    }

    private void NavigateBackToProperties()
    {
        NavigationManager.NavigateTo("/properties");
    }

    private void ShowAddPaymentModal()
    {
        editingPayment = new RentalPayment
        {
            RentalPropertyId = PropertyId,
            PaymentDate = DateTime.Today
        };
        showPaymentModal = true;
    }

    private void EditPayment(RentalPayment payment)
    {
        editingPayment = new RentalPayment
        {
            Id = payment.Id,
            Amount = payment.Amount,
            PaymentDate = payment.PaymentDate,
            PaymentMethod = payment.PaymentMethod,
            PaymentReference = payment.PaymentReference,
            Notes = payment.Notes,
            RentalPropertyId = payment.RentalPropertyId,
            CreatedAt = payment.CreatedAt,
            UpdatedAt = payment.UpdatedAt
        };
        showPaymentModal = true;
    }

    private async Task HandlePaymentSaved(RentalPayment payment)
    {
        await LoadPaymentsAsync();
    }

    private void ConfirmDelete(RentalPayment payment)
    {
        paymentToDelete = payment;
        isDeleteModalVisible = true;
    }

    private void CancelDelete()
    {
        isDeleteModalVisible = false;
        paymentToDelete = null;
    }

    private async Task DeletePayment()
    {
        if (paymentToDelete == null) return;

        try
        {
            isLoading = true;
            StateHasChanged();

            await PaymentService.DeletePaymentAsync(paymentToDelete.RentalPropertyId, paymentToDelete.Id);
            
            isDeleteModalVisible = false;
            paymentToDelete = null;
            
            await LoadPaymentsAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error deleting payment: {ex.Message}";
            Logger.LogError(ex, "Error deleting payment");
            isDeleteModalVisible = false;
            paymentToDelete = null;
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void ShowAttachments(RentalPayment payment)
    {
        selectedPaymentId = payment.Id;
        showAttachmentsModal = true;
    }

    private void CloseAttachmentsModal()
    {
        showAttachmentsModal = false;
        selectedPaymentId = null;
    }

    private void ClosePaymentModal()
    {
        showPaymentModal = false;
        editingPayment = null;
    }
}