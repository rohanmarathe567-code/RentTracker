@baseUrl = http://localhost:7000
@propertyId = 00000000-0000-0000-0000-000000000001
@paymentId = 00000000-0000-0000-0000-000000000002
@attachmentId = 00000000-0000-0000-0000-000000000003

### Health Check ###
GET {{baseUrl}}/api/health
Accept: application/json

### Properties ###

# Get all properties
GET {{baseUrl}}/api/properties
Accept: application/json

###

# Get property by ID
GET {{baseUrl}}/api/properties/{{propertyId}}
Accept: application/json

###

# Create new property
POST {{baseUrl}}/api/properties
Content-Type: application/json

{
    "id": "{{propertyId}}",
    "address": "123 Sample Street",
    "suburb": "Sample Suburb",
    "state": "NSW",
    "postCode": "2000",
    "description": "Modern 2-bedroom apartment",
    "weeklyRentAmount": 550.00,
    "leaseStartDate": "2024-01-01T00:00:00Z",
    "leaseEndDate": "2024-12-31T00:00:00Z",
    "propertyManager": "John Smith",
    "propertyManagerContact": "john.smith@example.com"
}

###

# Update property
PUT {{baseUrl}}/api/properties/{{propertyId}}
Content-Type: application/json

{
    "address": "123 Updated Street",
    "suburb": "Updated Suburb",
    "state": "NSW",
    "postCode": "2000",
    "description": "Updated description",
    "weeklyRentAmount": 575.00,
    "leaseStartDate": "2024-01-01T00:00:00Z",
    "leaseEndDate": "2024-12-31T00:00:00Z",
    "propertyManager": "Jane Doe",
    "propertyManagerContact": "jane.doe@example.com"
}

###

# Delete property
DELETE {{baseUrl}}/api/properties/{{propertyId}}

### Payments ###

# Get payments for a specific property
GET {{baseUrl}}/api/properties/{{propertyId}}/payments
Accept: application/json

###

# Get a specific payment by ID for a property
GET {{baseUrl}}/api/properties/{{propertyId}}/payments/{{paymentId}}
Accept: application/json

###

# Create new payment for a property
POST {{baseUrl}}/api/properties/{{propertyId}}/payments
Content-Type: application/json

{
    "id": "{{paymentId}}",
    "rentalPropertyId": "{{propertyId}}",
    "amount": 1100.00,
    "paymentDate": "2024-03-30T00:00:00Z",
    "paymentMethod": "Bank Transfer",
    "paymentReference": "RENT-123456",
    "notes": "Rent payment for April 2024"
}

###

# Update payment for a property
PUT {{baseUrl}}/api/properties/{{propertyId}}/payments/{{paymentId}}
Content-Type: application/json

{
    "amount": 1200.00,
    "paymentDate": "2024-03-30T00:00:00Z",
    "paymentMethod": "Credit Card",
    "paymentReference": "RENT-123456-UPDATE",
    "notes": "Updated rent payment for April 2024"
}

###

# Delete payment for a property
DELETE {{baseUrl}}/api/properties/{{propertyId}}/payments/{{paymentId}}

### Attachments ###

# Get property attachments
GET {{baseUrl}}/api/properties/{{propertyId}}/attachments
Accept: application/json

###

# Get payment attachments for a specific property
GET {{baseUrl}}/api/properties/{{propertyId}}/payments/{{paymentId}}/attachments
Accept: application/json

###

# Get attachment by ID
GET {{baseUrl}}/api/attachments/{{attachmentId}}
Accept: application/json

###

# Note: Attachment uploads require multipart/form-data
# Use Postman or curl for these requests

# Upload property attachment (Curl example)
# curl -X POST {{baseUrl}}/api/properties/{{propertyId}}/attachments \
#   -F "file=@/path/to/file.pdf" \
#   -F "description=Sample lease document" \
#   -F "id={{attachmentId}}"

# Upload payment attachment (Curl example)
# curl -X POST {{baseUrl}}/api/properties/{{propertyId}}/payments/{{paymentId}}/attachments \
#   -F "file=@/path/to/receipt.pdf" \
#   -F "description=Rent receipt" \
#   -F "id={{attachmentId}}"

###

# Delete attachment
DELETE {{baseUrl}}/api/attachments/{{attachmentId}}
